<script src="js/jquery-airport.js"></script>

// At each step
document.getElementById("impress").addEventListener("impress:stepenter", function (event) {

    var step = event.target;

    var settings = {
        "size":{
            "grid":8
        },
        "options":{
            "color":"random-light",
            "printMultiplier":3
        },
        "shape":"circle"
    }
    $("#wordcloud").awesomeCloud(settings);

    init();

}, false);


</script>
